{
  "name": "hmk-github-io",
  "version": "1.0.0",
  "description": "Heimark Family Jekyll site with Tailwind CSS",
  "scripts": {
    "build:css": "postcss assets/css/tailwind.css -o assets/css/style.css",
    "watch:css": "postcss assets/css/tailwind.css -o assets/css/style.css --watch",
    "dev": "concurrently \"npm run watch:css\" \"bundle exec jekyll serve\""
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.5"
  }
} 
